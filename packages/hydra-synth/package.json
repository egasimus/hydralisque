{
  "name": "hydra-synth",
  "version": "1.1.0",
  "description": "base synth for hydra-editor",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "example": "budo ./example/index.js --ssl --open --live --port 8000 --",
    "example-editor": "budo ./example/editor-example.js --ssl --open --live ",
    "coverage": "nyc npm run test"
