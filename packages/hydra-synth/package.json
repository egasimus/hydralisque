    "graphics",
    "livecoding",
    "synth"
  ],
  "author": "ojack",
  "license": "AGPL",
  "bugs": {
    "url": "https://github.com/ojack/hydra-synth/issues"
  },
  "homepage": "https://github.com/ojack/hydra-synth#readme",
  "dependencies": {
    "enumerate-devices": "^1.1.1",
    "meyda": "^4.1.3",
    "mouse-change": "^1.4.0",
    "raf-loop": "^1.1.3",
    "regl": "^1.3.9",
    "web-audio-analyser": "^2.0.1",
    "webrtc-adapter": "^6.4.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "glslify"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "chai": "^4.2.0",
    "codemirror": "^5.36.0",
    "gl": "^4.4.0",
    "glslify": "^6.3.1",
    "jsdom": "^15.2.0",
    "mocha": "^6.2.1",
    "mock-require": "^3.0.3",
    "nyc": "^14.1.1",
    "rewire": "^4.0.1",
    "rtc-patch-bay": "^1.0.0",
    "sinon": "^7.5.0"
